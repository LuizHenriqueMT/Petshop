  Vcl.Forms,
  ULogin in 'fonts\ULogin.pas' {frmLogin},
  UCadastro in 'fonts\UCadastro.pas' {frmClientes},
  UPrincipal in 'fonts\UPrincipal.pas' {frmPrincipal},
